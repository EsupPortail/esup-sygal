{
    "name": "unicaen/sygal",
    "description": "Application de gestion des soutenances de th√®se",
    "repositories": [
        {
            "type": "composer",
            "url": "https://gest.unicaen.fr/packagist"
        }
    ],
    "require-dev": {
        "unicaen/test": "dev-bg-php8",
        "laminas/laminas-developer-tools": "^2.3"
    },
    "require": {
        "php": "^8.0",

        "ext-curl": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-gettext": "*",
        "ext-imagick": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-readline": "*",
        "ext-simplexml": "*",
        "ext-soap": "*",
        "ext-xmlwriter": "*",
        "ext-xsl": "*",
        "ext-zip": "*",

        "aws/aws-sdk-php": "^3.226",
        "beberlei/assert": "^3.0",
        "guzzlehttp/guzzle": "^6.3",
        "laminas/laminas-dependency-plugin": "^2.1",
        "laminas/laminas-development-mode": "^3.2",
        "laminas/laminas-feed": "^2.12",
        "laminas/laminas-soap": "^2.8",
        "twig/twig": "^3.0",
        "webmozart/assert": "^1.3",

        "unicaen/alerte": "^2.0",
        "unicaen/app": "dev-ll-php8-bs5",
        "unicaen/auth": "dev-ll-php8-bs5",
        "unicaen/auth-token": "dev-bg-php8",
        "unicaen/console": "dev-main",
        "unicaen/db-anonym": "^2.0",
        "unicaen/db-import": "^6.0",
        "unicaen/faq": "^6.0",
        "unicaen/ldap": "dev-bg-php8",
        "unicaen/livelog": "^2.0",
        "unicaen/renderer": "dev-bg-php8"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-0": {
            "Application\\": "module/Application/src",
            "Retraitement\\": "module/Retraitement/src",
            "Notification\\": "module/Notification/src",
            "Import\\": "module/Import/src",
            "StepStar\\": "module/StepStar/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationUnitTest\\": "module/Application/tests/ApplicationUnitTest",
            "ApplicationFunctionalTest\\": "module/Application/tests/ApplicationFunctionalTest",
            "RetraitementTest\\": "module/Retraitement/test/RetraitementTest",
            "ImportTest\\": "module/Import/tests/ImportTest"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p public/unicaen && cp -r vendor/unicaen/app/public/unicaen public/",
            "mkdir -p public/unicaen && cp -r vendor/unicaen/db-import/public/unicaen public/",
            "mkdir -p vendor/mpdf/mpdf/ttfontdata && chmod -R 777 vendor/mpdf/mpdf/ttfontdata"
        ]
    },
    "config": {
        "allow-plugins": {
            "laminas-api-tools/api-tools-asset-manager": true,
            "laminas/laminas-dependency-plugin": true
        }
    }
}
