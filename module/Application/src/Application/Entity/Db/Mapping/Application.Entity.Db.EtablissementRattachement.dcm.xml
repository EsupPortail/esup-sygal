<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\Entity\Db\EtablissementRattachement" table="ETABLISSEMENT_RATTACH">
        <id name="id" type="integer" column="ID">
            <generator strategy="SEQUENCE"/>
        </id>

        <many-to-one field="unite" target-entity="Application\Entity\Db\UniteRecherche" fetch="LAZY">
            <join-columns>
                <join-column name="UNITE_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="etablissement" target-entity="Application\Entity\Db\Etablissement" fetch="LAZY">
            <join-columns>
                <join-column name="ETABLISSEMENT_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>

        <field name="principal" type="boolean" column="PRINCIPAL" nullable="true"/>

    </entity>
</doctrine-mapping>
