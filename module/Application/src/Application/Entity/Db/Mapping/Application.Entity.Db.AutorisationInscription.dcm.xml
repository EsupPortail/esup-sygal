<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\Entity\Db\AutorisationInscription"
          table="autorisation_inscription">

    <id name="id" type="integer" column="ID">
      <generator strategy="SEQUENCE"/>
    </id>

    <field name="anneeUniv" type="integer" column="ANNEE_UNIV" nullable="false"/>
    <field name="autorisationInscription" type="boolean" column="tem_autor_inscription" nullable="false"/>
    <field name="commentaires" type="string" column="commentaires" nullable="true"/>

    <many-to-one field="individu" target-entity="Individu\Entity\Db\Individu">
      <join-columns>
        <join-column name="INDIVIDU_ID" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>

    <many-to-one field="these" target-entity="These\Entity\Db\These">
      <join-column name="THESE_ID" referenced-column-name="id"/>
    </many-to-one>

    <many-to-one field="rapport" target-entity="Application\Entity\Db\Rapport">
      <join-columns>
        <join-column name="RAPPORT_ID" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <field name="histoCreation" type="datetime" column="HISTO_CREATION"/>
    <field name="histoDestruction" type="datetime" column="HISTO_DESTRUCTION" nullable="true"/>
    <field name="histoModification" type="datetime" column="HISTO_MODIFICATION"/>

    <many-to-one field="histoModificateur" target-entity="Application\Entity\Db\Utilisateur">
      <join-columns>
        <join-column name="HISTO_MODIFICATEUR_ID" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="histoDestructeur" target-entity="Application\Entity\Db\Utilisateur">
      <join-columns>
        <join-column name="HISTO_DESTRUCTEUR_ID" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="histoCreateur" target-entity="Application\Entity\Db\Utilisateur">
      <join-columns>
        <join-column name="HISTO_CREATEUR_ID" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>

  </entity>
</doctrine-mapping>
