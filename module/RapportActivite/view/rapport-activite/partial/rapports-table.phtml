                <?php endif; ?>
                <?php if ($canEdit): ?>
                    <a href="<?php echo $this->url('rapport-activite/modifier', ['rapport' => $rapport->getId()], ['query' => ['redirect' => $returnUrl]]) ?>"
                       title="Modifier ce rapport"><span class="icon icon-modifier iconly"></span></a>
                    </a>
                <?php endif; ?>
                <?php if ($canDel): ?>
