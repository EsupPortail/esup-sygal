<div class="row">
    <div class="col-md-7">
        <?php foreach ($avisTypeValeurComplemsElements as $element): ?>
            <div class="avis-type-complem" style="display: none">
                <?php echo $this->formControlGroup($element); ?>
            </div>
        <?php endforeach ?>
    </div>
</div>
