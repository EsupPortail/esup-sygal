<div class="row">
    <div class="col-md-4">
        <fieldset>
            <legend><?php echo $avisElement->getLabel() ?></legend>
            <?php $avisElement->setLabel('') ?>
            <?php echo $this->formControlGroup($avisElement) ?>
        </fieldset>
    </div>
