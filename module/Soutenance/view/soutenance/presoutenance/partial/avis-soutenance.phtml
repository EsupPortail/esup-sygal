                            <span class="text-danger">
                                <?php echo $rapporteur->getDenomination(); ?>
                            </span>
                        <?php endif; ?>
                    </td>

                    <!-- Affichage de l'avis de soutenance -->
                    <td>
                        <?php if ($acteur) : ?>
                            <?php if (isset($avis[$acteur->getIndividu()->getId()])): ?>
