                                <a
                                    <?php /** @see TELECHARGER FICHIER */ ?>
                                    href=" <?php echo $this->urlFichierThese->telechargerFichierThese($these, $avis[$acteur->getIndividu()->getId()]->getFichier()); ?>" >
                                    Rapport de pré-soutenance</a>
                            <?php endif ?>
                        <?php endif; ?>
