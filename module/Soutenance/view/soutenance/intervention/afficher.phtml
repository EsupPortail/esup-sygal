                                <?php endif; ?>
                            <?php else : ?>
                                <span class="text text-danger">Déléguation de signature manquante pour <strong style="font-variant:small-caps;"><?php echo $membre->getDenomination(); ?></strong></span>
                                <?php if ($canModifier) : ?>
